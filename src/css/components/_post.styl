.post
  $this = selector()
  $c-border = #EFEFEF
  $c-bg = #EFEFEF

  &
    background white
    border 1px solid $c-border
    font-size 14px
    margin 50px 0

    &:first-child
      margin-top 0

    &:last-child
      margin-bottom 0

  &__header
    padding 15px
    display flex
    align-items center
    justify-content space-between

  &__content
    background $c-bg

    img
      display block
      margin auto
      max-width 100%

  &__footer
    padding 15px

  &__author
    display flex
    align-items center

    &-pic
      position relative
      width 30px
      height 30px
      margin-right 8px
      border 1px solid $c-border
      // background $c-bg embedurl('../../img/user.svg') no-repeat center
      background $c-bg
      background-size 60%
      border-radius 50%
      overflow hidden

      > img
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        height 100%

    &-name
      font-weight 500

  &__time
    color #909090

  &__comments-list
    list-style-type none
    margin 0
    padding 0

  &__comment
    margin-top 8px

    &:first-child
      margin-top 0

    &-author
      font-weight 500

    &-text
      font-weight 400
      color #555

    &-time
      font-size 12px
      font-style italic
      color #CCC

  &__add-comment
    display block
    margin-top 12px
    padding-top 12px
    border-top 1px solid #EFEFEF

    input
      display block
      width 100%
      border none
      font inherit
      outline none
