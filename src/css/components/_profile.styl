.profile
  $pic-size = 140px

  f-align(1, 1)
  flex-wrap wrap

  &__body
    flex 1 0 auto

  &__pic
    width $pic-size
    height $pic-size
    border-radius 50%
    flex 0 1 auto
    margin-right 20px
    border 2px solid #ccc
    margin-bottom 20px
    background-size cover

  &__actions
    margin-top 20px

  &__uploader
    f-align(2, 2)
    position relative
    width 100%
    height 100%
    margin 0
    cursor pointer

    input
      position absolute
      opacity 0
