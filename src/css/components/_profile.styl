.profile
  $this = selector()
  $pic-size = 140px

  f-align(1, 1)

  &__left
    text-align center
    flex 0 1 auto
    margin-right 20px

  &__body
    flex 1 0 auto

  &__pic
    position relative
    width $pic-size
    height $pic-size
    border-radius 50%
    border 2px solid #ccc
    margin-bottom 20px
    background-size cover
    overflow hidden

    input[type="file"]
      display none

  &__pic-uploader
    display none
    position absolute
    top 0
    left 0
    margin 0
    width 100%
    height 100%
    cursor pointer
    border-radius 50%

  &__actions
    margin-top 20px

    &--edit
      f-align(13, 2)
      display none

  &__uploader
    f-align(2, 2)
    position relative
    width 100%
    height 100%
    margin 0
    cursor pointer

    input
      position absolute
      opacity 0

  .fa-spinner
    display none

  // edit mode
  &.is-edit

    {$this}__pic-uploader
      display block

    {$this}__actions
      display none

      &--edit
        display flex

  // loading state
  &.is-loading

    .fa-spinner
      display block
