<div class="container-fluid">
  {{> header}}

  {{#with user}}
  <div class="profile profile--show">
    <div class="profile__pic"{{#if photoURL}} style="background-image: url('{{ photoURL }}')"{{/if}}></div>

    <p class="profile__name">
      {{#if displayName}}{{ displayName }}{{else}}Unnamed{{/if}}
    </p>

    <ul class="profile__social">
      <li><a href="mailto:{{ email }}"><i class="fa fa-envelope-o"></i> {{ email }}</a></li>
    </ul>

    <a href="/profile/edit" class="btn btn-default">
      <i class="fa fa-pencil"></i>
      <span>Edit profile</span>
    </a>
  </div>
  {{/with}}

</div>
